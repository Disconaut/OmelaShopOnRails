    </div>
    <%= link_to "#headerCarousel", class: "carousel-control carousel-control-prev", role: "button", "data-slide": "prev", "data-turbolinks": "false" do %>
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
